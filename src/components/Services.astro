---
import { siteConfig } from '../config.ts';
import * as LucideIcons from '@lucide/astro';
import { servicesContent } from '../content/services';

const serviceUrls: Record<string, string> = {
  'Mjukvaru­konsulting': '/mjukvarukonsulting',
  'Ledarskaps­konsulting': '/ledarskapskonsulting',
  'Events': '/events',
};
---

<section id="services" class="relative bg-[var(--color-bg-main-default)] px-4 py-20 sm:px-6 lg:px-8">


  <div class="mx-auto max-w-7xl">
    <div class="scroll-fade-up mx-auto mb-16 max-w-3xl text-center">
      <h2 class="text-mono-black mb-4 text-4xl font-bold sm:text-5xl">
        {siteConfig.services.title}
      </h2>
      <p class="text-mono-dark text-xl">
        {siteConfig.services.subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        servicesContent.map((service, index) => {
          const IconComponent = LucideIcons[service.icon];
          return (
          <a
            href={serviceUrls[service.title]}
            class={`group block ${index % 2 === 0 ? 'scroll-fade-left' : 'scroll-fade-right'} bg-[var(--color-bg-card)] border-mono-lighter rounded-xl border p-8 stagger-${(index % 9) + 1} hover:shadow-lg transition-shadow flex flex-col`}
          >
            <div>
              <div class="flex items-center gap-4 mb-3">
                <div class="feature-icon bg-[var(--color-orange)] flex h-14 w-14 items-center justify-center rounded-lg text-white flex-shrink-0">
                  <IconComponent class="h-7 w-7" />
                </div>
                <h3 class="text-mono-black text-xl font-semibold card-title">
                  {service.title}
                </h3>
              </div>
              <p class="text-mono-dark leading-relaxed">{service.description}</p>
            </div>
            <div class="mt-auto pt-4 text-right">
              <p class="text-gray-500 text-sm">Läs mer...</p>
            </div>
          </a>
          );
        })
      }
    </div>
  </div>
</section>
