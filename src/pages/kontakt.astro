---
import Layout from '../components/Layout.astro';
import { siteConfig, getImageSrcSet, imageSizes } from '../config.ts';
import { contactContent } from '../content/contact';
import { Icon } from 'astro-icon/components';
import { marked } from 'marked';

const contactGeneralHtml = await marked(contactContent.contactGeneral.text);
const contactStartHtml = await marked(contactContent.contactStart.text);

const getInitials = (name: string) =>
  name
    .split(' ')
    .filter(Boolean)
    .slice(0, 2)
    .map((part) => part[0])
    .join('')
    .toUpperCase();
---

<Layout title={`Kontakta oss - ${siteConfig.site.title}`} description={contactContent.ingress}>
  <main class="min-h-screen bg-white">
    <div class="mx-auto max-w-7xl px-4 py-20 sm:px-6 lg:px-8">
      <header class="mt-12 mb-12 text-center">
        <h1 class="text-5xl font-bold mb-6">{contactContent.header}</h1>
      </header>

      <section class="mb-16">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
          <div class="rounded-2xl border border-mono-lighter p-8" style="background-color: rgb(250, 250, 250);">
            <div class="feature-icon bg-[var(--color-orange)] mb-6 flex h-14 w-14 items-center justify-center rounded-lg text-white">
              <Icon name={contactContent.contactGeneral.icon} class="h-7 w-7" />
            </div>
            <div class="text-lg text-gray-700 leading-relaxed space-y-4 [&>p]:mb-4 [&>em]:italic [&>strong]:font-semibold" set:html={contactGeneralHtml}></div>
          </div>
          <div class="rounded-2xl border border-mono-lighter p-8" style="background-color: rgb(250, 250, 250);">
            <div class="feature-icon bg-[var(--color-orange)] mb-6 flex h-14 w-14 items-center justify-center rounded-lg text-white">
              <Icon name={contactContent.contactStart.icon} class="h-7 w-7" />
            </div>
            <div class="text-lg text-gray-700 leading-relaxed space-y-4 [&>p]:mb-4 [&>em]:italic [&>strong]:font-semibold" set:html={contactStartHtml}></div>
          </div>
        </div>
      </section>

      <section class="mb-16">
        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
          {contactContent.people.map((person) => (
            <article class="rounded-2xl border border-mono-lighter bg-white p-6 shadow-sm transition-shadow hover:shadow-md">
              <div class="mb-5">
                <div class="relative aspect-[4/5] overflow-hidden rounded-xl bg-gray-100">
                  <img
                    srcset={getImageSrcSet(person.photo)}
                    sizes={imageSizes.contactPhoto}
                    src={person.photo.desktop}
                    alt={`Foto pÃ¥ ${person.name}`}
                    class="h-full w-full object-cover"
                    loading="lazy"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  />
                  <div class="absolute inset-0 hidden items-center justify-center bg-gray-100 text-3xl font-semibold text-mono-dark">
                    {getInitials(person.name)}
                  </div>
                </div>
              </div>
              <h3 class="text-xl font-semibold text-mono-black mb-1">{person.name}</h3>
              <p class="text-mono-dark mb-4">{person.title}</p>
              <div class="space-y-2 text-sm">
                <div>
                  <p class="text-mono-gray">Telefon</p>
                  <a
                    href={`tel:${person.phoneNumber}`}
                    class="text-mono-dark hover:text-mono-black"
                  >
                    {person.phoneDisplay}
                  </a>
                </div>
                <div>
                  <p class="text-mono-gray">E-post</p>
                  <a
                    href={`mailto:${person.email}`}
                    class="text-mono-dark hover:text-mono-black break-all"
                  >
                    {person.email}
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </section>
      
      <section>
        <div class="rounded-2xl border border-mono-lighter bg-gray-50 p-8 md:p-10">
          <h2 class="text-2xl font-semibold mb-6">Bolagsuppgifter</h2>
          <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
            <div>
              <p class="text-sm uppercase text-mono-gray">Bolag</p>
              <p class="text-lg font-semibold text-mono-black">
                {contactContent.company.name}
              </p>
            </div>
            <div>
              <p class="text-sm uppercase text-mono-gray">Org.nr</p>
              <p class="text-lg font-semibold text-mono-black">
                {contactContent.company.orgNumber}
              </p>
            </div>
            <div>
              <p class="text-sm uppercase text-mono-gray">Bankgiro</p>
              <p class="text-lg font-semibold text-mono-black">
                {contactContent.company.bankgiro}
              </p>
            </div>
          </div>
        </div>
      </section>

    </div>
  </main>
</Layout>
